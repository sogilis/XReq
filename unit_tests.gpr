with "aunit";
with "config.gpr";

project Unit_Tests is

   for Languages   use ("Ada");
   for Main        use ("test_main");
   for Source_Dirs use ("tests");
   for Object_Dir  use "obj";
   for Exec_Dir    use "bin";

   package Builder is
      for Executable ("test_main") use "unit_tests";
   end Builder;

   package Compiler is
      for Default_Switches ("Ada") use Config.Ada_Switches_Debug & (
         "-gnatQ"
         );
   end Compiler;

   package Linker is
      for Default_Switches ("Ada") use Config.Ada_Switches_Linker_Debug;
   end Linker;

   package Binder is
      for Default_Switches ("Ada") use Config.Ada_Switches_Binder_Debug;
   end Binder;

end Unit_Tests;
